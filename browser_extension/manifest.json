{
  "name": "Chaddon",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "This extension allows us to connect with global users.",
  "homepage_url": "https://www.chaddon.ca",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_ui": {
    "page": "src/options_custom/index.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Chaddon",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "https://*/* ",
    "storage"
  ],
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["js/jquery/jquery-3.3.1.min.js", "js/socket.io/socket.io.js"]
  }]
}